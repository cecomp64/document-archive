<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Semantic Search - Article Explorer</title>
    <%= stylesheet_link_tag "document_archive/search", media: "all" %>
</head>
<body>
    <div class="container">
        <header>
            <h1>Article Semantic Search</h1>
            <p class="subtitle">Search through articles using natural language</p>
        </header>

        <nav class="main-nav">
            <a href="<%= root_path %>" class="nav-link active">Search</a>
            <a href="<%= articles_path %>" class="nav-link">Articles</a>
            <a href="<%= documents_path %>" class="nav-link">Documents</a>
        </nav>

        <div class="stats-bar" id="statsBar">
            <span id="stats">Loading...</span>
        </div>

        <div class="search-section">
            <div class="search-box">
                <input
                    type="text"
                    id="searchInput"
                    placeholder="Enter your search query..."
                    autocomplete="off"
                >
                <button id="searchButton">Search</button>
            </div>
            <div class="search-options">
                <label>
                    Results per section:
                    <select id="limitSelect">
                        <option value="5">5</option>
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </label>
                <div class="date-filter-inline">
                    <label>
                        From Year:
                        <input type="number" id="startYear" min="1900" max="2100" placeholder="YYYY" />
                    </label>
                    <label>
                        To Year:
                        <input type="number" id="endYear" min="1900" max="2100" placeholder="YYYY" />
                    </label>
                </div>
            </div>
        </div>

        <div id="loadingIndicator" class="loading hidden">
            <div class="spinner"></div>
            <p>Searching...</p>
        </div>

        <!-- Semantic Search Results -->
        <div id="semanticResultsContainer" class="results-container hidden">
            <h2 class="section-header">
                <span class="section-icon">üß†</span>
                Semantic Search Results (<span id="semanticResultCount">0</span>)
            </h2>
            <div id="semanticResults"></div>
            <div class="pagination" id="semanticPagination">
                <button id="semanticPrevButton" disabled>Previous</button>
                <span id="semanticPageInfo"></span>
                <button id="semanticNextButton">Next</button>
            </div>
        </div>

        <!-- Text-Based Search Results -->
        <div id="textSearchResultsContainer" class="results-container hidden">
            <h2 class="section-header collapsible">
                <span class="section-icon">üìù</span>
                Text-Based Search Results
                <span class="collapse-toggle">‚ñº</span>
            </h2>

            <!-- Keywords Results -->
            <div class="search-subsection" id="keywordsSection">
                <h3 class="subsection-header">
                    <span class="subsection-icon">üè∑Ô∏è</span>
                    Keywords Matches (<span id="keywordsResultCount">0</span>)
                </h3>
                <div id="keywordsResults"></div>
                <div class="pagination" id="keywordsPagination">
                    <button id="keywordsPrevButton" disabled>Previous</button>
                    <span id="keywordsPageInfo"></span>
                    <button id="keywordsNextButton">Next</button>
                </div>
            </div>

            <!-- Categories Results -->
            <div class="search-subsection" id="categoriesSection">
                <h3 class="subsection-header">
                    <span class="subsection-icon">üìÅ</span>
                    Categories Matches (<span id="categoriesResultCount">0</span>)
                </h3>
                <div id="categoriesResults"></div>
                <div class="pagination" id="categoriesPagination">
                    <button id="categoriesPrevButton" disabled>Previous</button>
                    <span id="categoriesPageInfo"></span>
                    <button id="categoriesNextButton">Next</button>
                </div>
            </div>

            <!-- Summary Results -->
            <div class="search-subsection" id="summarySection">
                <h3 class="subsection-header">
                    <span class="subsection-icon">üìÑ</span>
                    Summary Matches (<span id="summaryResultCount">0</span>)
                </h3>
                <div id="summaryResults"></div>
                <div class="pagination" id="summaryPagination">
                    <button id="summaryPrevButton" disabled>Previous</button>
                    <span id="summaryPageInfo"></span>
                    <button id="summaryNextButton">Next</button>
                </div>
            </div>
        </div>

        <div id="browsePrompt" class="browse-prompt">
            <p>Or explore the archive:</p>
            <a href="<%= articles_path %>" class="browse-link">Browse by Article</a>
            <a href="<%= documents_path %>" class="browse-link">Browse by Document</a>
        </div>
    </div>

    <script>
        window.DocumentArchiveConfig = { rootPath: "<%= document_archive.root_path.chomp('/') %>" };
    </script>
    <%= javascript_include_tag "document_archive/common" %>
    <%= javascript_include_tag "document_archive/search" %>
</body>
</html>
