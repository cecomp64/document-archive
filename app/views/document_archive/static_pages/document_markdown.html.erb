<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document Viewer - Article Explorer</title>
    <%= stylesheet_link_tag "document_archive/search", media: "all" %>
    <style>
        .markdown-content {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            line-height: 1.8;
            font-size: 16px;
            overflow: auto;
        }
        .markdown-content img {
            max-width: 100%;
            height: auto;
        }
        .markdown-content h1 { font-size: 2em; margin: 1em 0 0.5em; color: #333; }
        .markdown-content h2 { font-size: 1.6em; margin: 1em 0 0.5em; color: #444; }
        .markdown-content h3 { font-size: 1.3em; margin: 1em 0 0.5em; color: #555; }
        .markdown-content p { margin: 1em 0; }
        .markdown-content ul, .markdown-content ol { margin: 1em 0; padding-left: 2em; }
        .markdown-content li { margin: 0.5em 0; }
        .markdown-content code {
            background: #f4f4f4;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: 'Monaco', 'Menlo', monospace;
            font-size: 0.9em;
        }
        .markdown-content pre {
            background: #f4f4f4;
            padding: 15px;
            border-radius: 8px;
            overflow-x: auto;
        }
        .markdown-content pre code {
            background: none;
            padding: 0;
        }
        .markdown-content blockquote {
            border-left: 4px solid #667eea;
            margin: 1em 0;
            padding-left: 1em;
            color: #666;
        }
        .markdown-content a {
            color: #667eea;
            text-decoration: none;
        }
        .markdown-content a:hover {
            text-decoration: underline;
        }
        .markdown-content table {
            border-collapse: collapse;
            margin: 1em 0;
            display: block;
            overflow-x: auto;
            max-width: 100%;
        }
        .markdown-content th, .markdown-content td {
            border: 1px solid #ddd;
            padding: 8px 12px;
            text-align: left;
        }
        .markdown-content th {
            background: #f4f4f4;
        }
        .back-link {
            display: inline-block;
            color: white;
            text-decoration: none;
            margin-bottom: 15px;
            opacity: 0.9;
        }
        .back-link:hover {
            opacity: 1;
            text-decoration: underline;
        }
        .loading-markdown {
            text-align: center;
            padding: 60px;
            color: #666;
        }
        .error-message {
            background: #fee;
            border: 1px solid #fcc;
            color: #c00;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
        .highlight-target {
            animation: highlight-fade 2s ease-out;
        }
        @keyframes highlight-fade {
            0% { background-color: rgba(102, 126, 234, 0.3); }
            100% { background-color: transparent; }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="<%= documents_path %>" class="back-link">&larr; Back to Documents</a>

        <header>
            <h1 id="documentTitle">Loading...</h1>
            <p class="subtitle">Document Content</p>
        </header>

        <nav class="main-nav">
            <a href="<%= root_path %>" class="nav-link">Search</a>
            <a href="<%= articles_path %>" class="nav-link">Articles</a>
            <a href="<%= documents_path %>" class="nav-link active">Documents</a>
        </nav>

        <div class="markdown-content" id="markdownContent">
            <div class="loading-markdown">
                <div class="spinner"></div>
                <p>Loading document content...</p>
            </div>
        </div>
    </div>

    <script>
        window.DocumentArchiveConfig = { rootPath: "<%= document_archive.root_path.chomp('/') %>" };
    </script>
    <%= javascript_include_tag "document_archive/common" %>
    <script>
        const documentId = '<%= @document_id %>';

        document.addEventListener('DOMContentLoaded', () => {
            loadDocumentMarkdown();
        });

        async function loadDocumentMarkdown() {
            try {
                const response = await fetch(`${DocumentArchive.API_BASE_URL}/api/documents/${documentId}/markdown`);
                if (!response.ok) {
                    throw new Error('Document not found');
                }
                const data = await response.json();

                document.getElementById('documentTitle').textContent = data.name || 'Untitled Document';

                if (data.htmlContent) {
                    document.getElementById('markdownContent').innerHTML = data.htmlContent;
                    scrollToArticle();
                } else {
                    document.getElementById('markdownContent').innerHTML =
                        '<div class="error-message">No markdown content available for this document.</div>';
                }
            } catch (error) {
                console.error('Error loading document:', error);
                document.getElementById('documentTitle').textContent = 'Document Not Found';
                document.getElementById('markdownContent').innerHTML =
                    '<div class="error-message">Unable to load document content.</div>';
            }
        }

        function scrollToArticle() {
            const params = new URLSearchParams(window.location.search);
            const articleTitle = params.get('article');
            if (!articleTitle) return;

            const headings = document.querySelectorAll('#markdownContent h1, #markdownContent h2, #markdownContent h3, #markdownContent h4');
            for (const heading of headings) {
                if (heading.textContent.trim().toLowerCase() === articleTitle.trim().toLowerCase()) {
                    heading.classList.add('highlight-target');
                    setTimeout(() => {
                        heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }, 100);
                    return;
                }
            }
        }
    </script>
</body>
</html>
