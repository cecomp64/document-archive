{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "migrate",
            "type": "shell",
            "command": "docker compose run --rm app bin/rails db:migrate"
        },
        {
            "label": "import",
            "type": "shell",
            "command": "docker compose run --rm app bin/rails 'document_archive:import[${input:importPath}]'"
        },
        {
            "label": "dump-data",
            "type": "shell",
            "command": "docker container exec document-archive-db pg_dump --data-only --inserts -U root document_archive_development > test/dummy/db/`date -I`.sql"
        },
        {
            "label": "console",
            "type": "shell",
            "command": "docker compose run --rm app bin/rails c"
        }
    ],
    "inputs": [
        {
            "id": "importPath",
            "type": "promptString",
            "description": "Path to JSON files directory",
            "default": "/rails/test/dummy/db/seeds"
        }
    ]
}